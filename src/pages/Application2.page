            <div id="final-messages" class="action-message">{!finalMessage}</div> 
        </apex:outputPanel>
        
        
        <apex:actionFunction name="verifyEmail" 
                             action="{!verifyEmail}"
                             rerender="emailPanel,variables,messages"
                             oncomplete="verifyEmailComplete()"/>
        
        <apex:actionFunction name="validatePromo" 
                             action="{!validatePromo}"
                             rerender="promoPanel,variables,messages"
                             oncomplete="validateCodeComplete()"/>
        
        <apex:actionFunction name="submitPayment" 
                             action="{!submitPayment}" 
                             rerender="submitPanel,variables,messages,finalMessagesPanel"
                             oncomplete="submitPaymentComplete()"/>
        
        <apex:actionFunction name="submitApplication" 
                             action="{!submitApplication}"
                             rerender="submitPanel,variables,messages,finalMessagesPanel"
                             oncomplete="submitApplicationComplete()"/>                        
