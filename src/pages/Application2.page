                    <apex:inputHidden id="stripe-token" value="{!stripeToken}"/>
                    <span id="payment-help" class="help-block">{!$Label.App2_Help_Payment}</span>        
                    <button id="pay-button" class="ry-button">
                        {!$Label.App2_Button_Pay}
